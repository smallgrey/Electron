
.container{
	position: absolute;
	width: 100%;
	height: 100%;
	overflow: hidden;
}

.content-container, .foot-container, .foot-tabbar{
	width: 100%;
}

.foot-tabbar {
  background: #ffffff !important;
  height: 100rpx;
}

.tabbar--weui-tabbar__label {
  color: #555555 !important;
}

.tabbar--weui-tabbar__item.tabbar--weui-bar__item_on .tabbar--weui-tabbar__label {
  color: #2ea7e0 !important;
}

.show {
  display: block;
}

.hidden {
  display: none;
}

/* 公共样式 */
.flex-row{
	display: flex;
	flex-direction: column;
	align-items: flex-start;
	justify-content: flex-start;
}

.flex-grow{
	flex: 1;
	overflow: scroll;
}